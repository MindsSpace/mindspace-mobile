<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Outer dashed circle -->
    <item>
        <shape android:shape="oval">
            <stroke
                android:width="1dp"
                android:color="#008080"
                android:dashWidth="8dp"
                android:dashGap="8dp"/>
            <size
                android:width="130dp"
                android:height="130dp"/>
        </shape>
    </item>

    <!-- Inner solid circle with shadow -->
    <item
        android:right="10dp"
        android:left="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#9DCBCF"/>
            <size
                android:width="90dp"
                android:height="90dp"/>
            <corners android:radius="45dp"/>
            <padding
                android:top="15dp"
                android:bottom="15dp"
                android:left="15dp"
                android:right="15dp"/>
        </shape>
    </item>

    <item
        android:right="10dp"
        android:left="10dp"
        android:top="10dp"
        android:bottom="10dp">
        <shape android:shape="oval">
            <solid android:color="#E2F8F8"/>
            <size
                android:width="90dp"
                android:height="90dp"/>
            <corners android:radius="45dp"/>
            <padding
                android:top="10dp"
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"/>
        </shape>
    </item>
</layer-list>

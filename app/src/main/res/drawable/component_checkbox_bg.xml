<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="#33000000" /> <!-- Semi-transparent black for shadow -->
                </shape>
            </item>
            <!-- Offset the shadow -->
            <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="12dp" />
                    <stroke android:width="4dp" android:color="#9DCBCF" />
                </shape>
            </item>
            <!-- Main checkbox background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="@color/green_500" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="false">
        <layer-list>
            <!-- Shadow layer -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="#33000000" /> <!-- Semi-transparent black for shadow -->
                </shape>
            </item>
            <!-- Offset the shadow -->
            <item android:right="2dp" android:left="2dp" android:top="2dp" android:bottom="2dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/transparent" />
                    <corners android:radius="12dp" />
                    <stroke android:width="4dp" android:color="#9DCBCF" />
                </shape>
            </item>
            <!-- Main checkbox background -->
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="16dp" />
                    <solid android:color="@color/green_100" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>

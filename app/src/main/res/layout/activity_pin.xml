<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    tools:context=".view.PinActivity">

    <LinearLayout
        android:id="@+id/opening_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/pin_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="@string/pin_title"
            android:textAlignment="center"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/pin_description"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_regular"
            android:text="@string/pin_description"
            android:textAlignment="center"
            android:textColor="@color/gray_600"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pin_layout"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/opening_layout">

        <EditText
            android:id="@+id/digit_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:inputType="numberPassword"
            android:padding="20dp"
            android:textAlignment="center"
            android:maxLength="2"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/digit_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:inputType="numberPassword"
            android:padding="20dp"
            android:textAlignment="center"
            android:maxLength="2"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/digit_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:inputType="numberPassword"
            android:padding="20dp"
            android:textAlignment="center"
            android:maxLength="2"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/digit_4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:layout_weight="1"
            android:background="@drawable/bg_edittext"
            android:inputType="numberPassword"
            android:padding="20dp"
            android:textAlignment="center"
            android:maxLength="2"
            android:maxLines="1"
            android:imeOptions="actionDone"
            android:textSize="20sp" />
    </LinearLayout>


    <com.dicoding.mindspace.view.canvas.MoonView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dicoding.mindspace.view.canvas.HillsView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
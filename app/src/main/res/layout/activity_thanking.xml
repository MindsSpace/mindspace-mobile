<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_screen"
    tools:context=".view.ThankingActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:contentDescription="@string/sparks"
        android:src="@drawable/sparks"
        app:layout_constraintBottom_toTopOf="@id/thanking_text"
        app:layout_constraintEnd_toEndOf="@id/thanking_text"
        app:layout_constraintStart_toStartOf="@id/thanking_text" />

    <TextView
        android:id="@+id/thanking_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="@string/thanking_quote"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="@color/green_900"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dicoding.mindspace.view.canvas.MoonView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:foregroundGravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.dicoding.mindspace.view.canvas.HillsView
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:foregroundGravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>